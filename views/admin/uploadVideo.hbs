<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Video Quiz</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .option-box {
            border: 1px solid #dee2e6;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 15px;
            background-color: #f8f9fa;
        }
        .option-label {
            font-weight: 500;
        }
        .form-check-label input {
            width: 85%;
            display: inline-block;
            margin-left: 10px;
        }
    </style>
</head>
<body class="bg-light">

    <div class="container my-5">
        <div class="card shadow-lg p-4">
            <h2 class="text-center mb-4">Upload Video & Create Quiz</h2>

            <form id="uploadForm" action="/uploader/upload-video" method="POST" enctype="multipart/form-data">
                
                <!-- Video Upload Section -->
                <h4 class="mb-3">üé• Video Upload</h4>
                <div class="mb-3">
                    <label for="title" class="form-label">Video Title</label>
                    <input type="text" class="form-control" id="title" name="title" placeholder="Enter video title" required>
                </div>

                <div class="mb-4">
                    <label for="videoFile" class="form-label">Upload Video</label>
                    <input type="file" class="form-control" id="videoFile" name="video" accept="video/*" required>
                </div>

                <!-- Question Section -->
                <h4 class="mb-3">üìù Quiz Question</h4>

                <div class="mb-3">
                    <label for="question" class="form-label">Question Text</label>
                    <input type="text" class="form-control" id="question" name="question" placeholder="Enter your quiz question" required>
                </div>

                <!-- 4 Option Boxes -->
                <div class="mb-3">
                    <label class="form-label d-block mb-2">Answer Options</label>

                    <div class="option-box">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="correctAnswer" value="0" required>
                            <label class="form-check-label option-label">Option 1</label>
                            <input type="text" class="form-control mt-2" name="option1" placeholder="Enter option 1" required>
                        </div>
                    </div>

                    <div class="option-box">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="correctAnswer" value="1" required>
                            <label class="form-check-label option-label">Option 2</label>
                            <input type="text" class="form-control mt-2" name="option2" placeholder="Enter option 2" required>
                        </div>
                    </div>

                    <div class="option-box">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="correctAnswer" value="2" required>
                            <label class="form-check-label option-label">Option 3</label>
                            <input type="text" class="form-control mt-2" name="option3" placeholder="Enter option 3" required>
                        </div>
                    </div>

                    <div class="option-box">
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="correctAnswer" value="3" required>
                            <label class="form-check-label option-label">Option 4</label>
                            <input type="text" class="form-control mt-2" name="option4" placeholder="Enter option 4" required>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary w-100 mt-3">Upload & Save Quiz</button>
            </form>
        </div>
    </div>

    <script>
        // Simple frontend validation
        document.getElementById("uploadForm").addEventListener("submit", function(e) {
            const title = document.getElementById("title").value.trim();
            const question = document.getElementById("question").value.trim();
            const video = document.getElementById("videoFile").files.length;

            if (!title || !question || video === 0) {
                e.preventDefault();
                alert("Please fill all fields and upload a video before submitting.");
            }
        });
    </script>

</body>
</html>
