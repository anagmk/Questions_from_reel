<link rel="stylesheet" href="/style/styles.css">

<script src='https://cdn.jsdelivr.net/npm/tsparticles@1.26.0/dist/tsparticles.min.js'></script>

<div id="particles-js" class="snow"></div>

<main>
   <div class="left-side"></div>
  
  <div class="right-side">
  <form action="/admin/login" method="POST">
     <input type="hidden" id="message" value="{{message}}" name="message">
        <div class="btn-group">
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/d1c98974-c62d-4071-8bd2-ab859fc5f4e9" alt="" />
            <span>Sign in with Google</span>
          </button>
          <button class="btn">
            <img class="logo" src="https://github.com/ecemgo/mini-samples-great-tricks/assets/13468728/59c1561b-8152-4d05-b617-0680a7629a0e" alt="" />
            <span>Sign in with Apple</span>
          </button>
        </div>

        <div class="or">OR</div>

        <label for="email">Email</label>
        <input id="email" type="text" placeholder="Enter Email" name="email" required />

        <label for="password">Password</label>
        <input
          id="password"
          type="password"
          placeholder="Enter Password"
          name="password"
          required />

        <button type="submit" class="login-btn">Sign in</button>
        <div class="links">
          <a href="#">Forgot password?</a>
          <a href="#">Do not have an account?</a>
        </div>
      </form>
      </div>
    </main>
  </body>

  <script>
    // Show server-side message (if any) using SweetAlert
    document.addEventListener('DOMContentLoaded', function () {
      var msgEl = document.getElementById('message');
      var message = msgEl ? msgEl.value : null;
      if (message) {
        try {
          swal(message);
        } catch (e) {
          // fallback: inject visible alert
          var alertDiv = document.createElement('div');
          alertDiv.className = 'alert alert-danger';
          alertDiv.textContent = message;
          document.querySelector('.right-side').insertBefore(alertDiv, document.querySelector('.right-side').firstChild);
        }
      }
    });
  </script>