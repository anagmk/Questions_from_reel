<link rel="stylesheet" href="/style/adminStyle.css">
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<body>
  <div class="admin-login-container">
    <div class="login-card">
      <div class="login-header">
        <h2>Edit User</h2>
        <p>Update user information</p>
      </div>

      <form action="/admin/user/edit/{{user._id}}" method="post" id="editForm">
        
        <div class="form-group">
          <label for="email">Email</label>
          <input 
            type="email" 
            id="email" 
            name="email" 
            value="{{user.email}}"
            placeholder="Enter user email" 
            required>
        </div>

        <div class="form-group">
          <label for="password">New Password (leave empty to keep current)</label>
          <input 
            type="password" 
            id="password" 
            name="password" 
            placeholder="Enter new password (optional)">
        </div>

        <button type="submit" class="login-btn">Update User</button>
        <a href="/admin/dashboard" class="btn btn-secondary" style="display: inline-block; text-align: center; margin-top: 10px;">Cancel</a>
      </form>
    </div>
  </div>
</body>

<script>
  document.getElementById('editForm').addEventListener('submit', function(e) {
    const email = document.getElementById('email').value;

    if (email === "") {
      e.preventDefault();
      swal("Email is required");
      return false;
    }
  });
</script>